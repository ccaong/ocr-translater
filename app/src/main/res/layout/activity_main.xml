<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3CB371"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_xz"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/bt_disc"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:background="#3CB371"
            android:text="图文识别"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="35dp" />
        <Button
            android:id="@+id/bt_hist"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="#3CB371"
            android:text="识别历史"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="35dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp">

           <LinearLayout
               android:layout_width="160dp"
               android:layout_height="160dp"
               android:orientation="vertical">

               <Button
                   android:id="@+id/bt_takep"
                   android:layout_width="match_parent"
                   android:layout_height="120dp"
                   android:background="@mipmap/pz"/>

               <TextView
                   android:id="@+id/tv_takep"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:text="拍摄照片"
                   android:textColor="#3CB371"
                   android:textSize="20sp"
                   android:gravity="center"/>
           </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_marginLeft="160dp">

            <Button
                android:id="@+id/bt_readp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/readp"/>

            <TextView
                android:id="@+id/tv_readp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="选择图片"
                android:textColor="#3CB371"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_marginTop="160dp">

            <Button
                android:id="@+id/bt_tran"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/yps" />

            <TextView
                android:id="@+id/tv_tran"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="中英翻译"
                android:textColor="#3CB371"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="160dp">

            <Button
                android:id="@+id/bt_hjl"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/hjl"/>

            <TextView
                android:id="@+id/tv_hjl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="图片锐化"
                android:textColor="#3CB371"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>