<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_takep"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/pz" />

            <TextView
                android:id="@+id/tv_takep"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="拍摄照片"
                android:textColor="#3CB371"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="160dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_readp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/readp" />

            <TextView
                android:id="@+id/tv_readp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="选择图片"
                android:textColor="#3CB371"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="160dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_tran"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/yps" />

            <TextView
                android:id="@+id/tv_tran"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="中英翻译"
                android:textColor="#3CB371"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="160dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_hjl"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/hjl" />

            <TextView
                android:id="@+id/tv_hjl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="图片锐化"
                android:textColor="#3CB371"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>